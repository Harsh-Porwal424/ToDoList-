<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>To DO List</title>
</head>

<body>

    <div class="box" id="heading">
        <h1>
            <%= kindOfDay %>!
        </h1>
    </div>


    <div class="box">

        
        <% for(var count=0; count<newListItem.length; count++ ){ %>
            <div class="item">
                <input type="checkbox">
                <p> <%= newListItem[count] %> </p>
            </div>
        <%} %>


        <form class="item" action="/" method="post">
            <input type="text" name="NewItem" placeholder="Write Your Next Task here....." autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
    </div>

</body>

</html>
